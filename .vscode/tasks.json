{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Fast Build and Run C++",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "g++ '${file}' -O0 -o '${fileDirname}/${fileBasenameNoExtension}' && '${fileDirname}/${fileBasenameNoExtension}'"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}


